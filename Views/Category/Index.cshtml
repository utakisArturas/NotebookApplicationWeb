@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1>Category List</h1>
        </div>
        <div class="col-6 text-end">
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary"  >Create Category</a>
    </div>
</div>
<br />
<table class="table table-bordered table-striped" style="width:100%" >
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Category id
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td style="width:50%">
                    @obj.Name
                </td>
                <td style="width:40%">
                    @obj.DisplayOrder
                </td>
                <td style="width:40%">
                    @obj.Id
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i >Edit</i></a>
                    </div>
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="DeletePost" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i >Delete</i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

